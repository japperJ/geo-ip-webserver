{
  "name": "geo-ip-webserver",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/frontend",
    "packages/workers"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w packages/backend\" \"npm run dev -w packages/frontend\"",
    "build": "npm run build -w packages/backend && npm run build -w packages/frontend",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "smoke:http": "node scripts/smoke/http-smoke.mjs",
    "smoke:policy": "node scripts/smoke/policy-smoke.mjs",
    "smoke:e2e": "node scripts/smoke/e2e-smoke.mjs",
    "smoke": "npm run smoke:http && npm run smoke:e2e"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
